<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15sp"
    android:background="#EAFAF1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDV :"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pp_car_upto1000_idv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:descendantFocusability="blocksDescendants"
            android:hint="In Rupees"
            android:inputType="number|numberDecimal"
            android:maxLines="1"
            android:nextFocusDown="@+id/txtdate"
            android:textAlignment="center"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Purchase :"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pp_car_upto1000_date_value"
            android:nextFocusDown="@+id/uwdiscount"
            android:layout_marginLeft="10dp"
            android:hint="dd/MM/yyyy"
            android:focusable="false"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/pp_car_upto1000_date_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#3498DB"
            android:onClick="showDatePickerDialog"
            android:text="Date"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </LinearLayout>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Zone :"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
            android:id="@+id/pp_car_upto1000_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/pp_car_upto1000_idv_value_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"/>

            <RadioButton
                android:id="@+id/pp_car_upto1000_idv_value_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:checked="true"
                android:layout_marginLeft="8dp"/>

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CC :"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pp_car_upto1000_cc_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:text="Upto 1000 cc"
            android:textAlignment="center"
            android:textColor="#000" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LPG :"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/pp_car_upto1000_lpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation='horizontal'
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/pp_car_upto1000_lpg_value_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/pp_car_upto1000_lpg_value_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"

                    android:layout_marginLeft="8dp"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5sp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="LPG Type :"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/pp_car_upto1000_lpgtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation='horizontal'
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/pp_car_upto1000_lpgtype_value_inbuilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inbuilt"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/pp_car_upto1000_lpgtype_value_fixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fixed"

                    android:layout_marginLeft="8dp"/>

            </RadioGroup>

            <EditText
                android:id="@+id/pp_car_upto1000_lpgtype_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:editable="true"
                android:layout_weight="1"
                android:hint="value"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="#000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lpg_sym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nil Depreciation :"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/pp_car_upto1000_nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation='horizontal'
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/pp_car_upto1000_nd_value_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/pp_car_upto1000_nd_value_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:layout_marginLeft="8dp"/>

            </RadioGroup>


            <EditText
                android:id="@+id/pp_car_upto1000_nd_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:editable="false"
                android:focusable="false"
                android:hint="value"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="#000"
                android:visibility="visible" />


            <TextView
                android:id="@+id/nd_sym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anti-Theft :"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/pp_car_upto1000_antitheft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation='horizontal'
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/pp_car_upto1000_antitheft_value_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"/>

                <RadioButton
                    android:id="@+id/pp_car_upto1000_antitheft_value_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:checked="true"
                    android:layout_marginLeft="8dp"/>

            </RadioGroup>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U/W Discount :"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pp_car_upto1000_uwd_value"
            android:nextFocusDown="@+id/spinner"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:hint="In Percentage"
            android:maxLines="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N C B : "
            android:textSize="17sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/pp_car_upto1000_ncb_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seating Capacity :"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pp_car_scpassengers_upto1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="numberDecimal"
                android:hint="Capacity"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pp_car_capacity_upto1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:inputType="numberDecimal"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_weight="1"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PA to Occupants :"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/pp_car_patooccupants_upto1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation='horizontal'>

                <RadioButton
                    android:id="@+id/pp_car_patooccupants_upto1000_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginLeft="8dp"

                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/pp_car_patooccupants_upto1000_Onelac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Lacs"/>

                <RadioButton
                    android:id="@+id/pp_car_patooccupants_upto1000_Twolac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Lacs"/>
            </RadioGroup>

        </LinearLayout>


        <Button
        android:id="@+id/pp_car_upto1000_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calculate"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#3498DB"/>

    </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#3CB371"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>