<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avidprogrammers.insurancepremiumcalculator.MainActivity"
    android:background="#EAFAF1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <Button
        android:id="@+id/motorcycle"
        android:layout_width = "match_parent"
        android:layout_height = "60dp"
        android:layout_weight = "1"
        android:text="MotorCycle"
        android:textAlignment="viewStart"
        android:drawablePadding="75dp"
        android:paddingLeft="25dp"
        android:drawableLeft="@drawable/bike"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="129dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/privatecar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/motorcycle"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Private Car"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp" />

    <Button
        android:id="@+id/taxiupto6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/privatecar"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Taxi Upto 6 Passengers"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp" />


    <Button
        android:id="@+id/taximore6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Taxi 6 Passengers and more"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/taxiupto6"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Passenger Auto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/taximore6"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/goodsautopublic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Public Carrier Goods Auto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/auto"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/goodsautoprivate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Private Carrier Goods Auto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/goodsautopublic"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/commercialvehiclepublic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Public Commercial Vehicle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/goodsautoprivate"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/commercialvehicleprivate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Private Commercial Vehicle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/commercialvehiclepublic"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/tractor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="TRACTORS &amp; TRAILERS"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="-165dp"
        tools:layout_editor_absoluteY="551dp"
        android:layout_below="@+id/commercialvehicleprivate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"/>
    </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#3CB371"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
